    @model List<TestWebUpdated.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Details";
    var successMessage = TempData["successMessage"]?.ToString();
    var errorMessage = TempData["errorMessage"]?.ToString();
}

    <h3>@ViewData["Title"]</h3>
    <hr />
@if (!string.IsNullOrWhiteSpace(@successMessage))
{
    <div class="alert alert-success">
        <strong>Success!</strong>@successMessage
        <button type="button" class="btn-close float-end" data-ds-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form action="/" method="post">
    <a asp-action="Create" asp-controller="EmployeeController1" class="btn btn-primary">Create Employee</a>


        <!-- Employee Table -->
        <table class="table table-responsive table-hover">
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Contact Number</th>
                    <th>Department Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.id</td>
                            <td>@employee.FullName</td>
                            <td>@employee.ContactNum</td>
                            <td>@employee.DepartmentName</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div>
                                No Employees Available.
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>